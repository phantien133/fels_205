<% provide :title, t(:home) %>
<% if logged_in? %>
  <div class="row">
    <div class="col-md-2 col-xs-12">
        <%= link_to image_tag("user-big.jpg", alt: "user.name")%>
    </div>
    <div class="col-md-3 col-xs-12">
        <h3 class="user-name"></h3>
        <h3 class="profile-property"><%= t :birthday %></h3>
        <h3 class="profile-property"><%= t :address %></h3>
    </div>
    <div class="col-md-7 col-xs-12">
      <div class="col-md-12 panel panel-success">
        <div class="panel-heading">
            <h1 class="panel-title title_header"><%= t :activities %></h1>
          </div>
      </div>
    </div>
  </div>
<% else %>
  <div class="row">
    <div class="center jumbotron">
      <h1><%= t :wellcome_to %></h1>
      <%= link_to t(:sign_up_now), signup_path,
        class: "btn btn-lg btn-primary" %>
    </div>
  </div>
<% end %>

