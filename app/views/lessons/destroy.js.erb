if (confirm('<%= @status %>') == true) {
  $.ajax({
    type: 'DELETE',
    url: '<%= "/lessons/#{@id}?confirm=true" %>',
    success: function(data){
      alert(data.status);
      $('#tr_lesson_id_<%= @id %>').remove();
    },
    error: function(error_message) {
      connect_failed.show();
    },
  });
}
