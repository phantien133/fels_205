<% provide :title, t(".title", name: @lesson.name) %>
<div class="row">
  <div class="col-md-2 col-xs-12">
  </div>
  <div class="col-md-10 col-xs-12">
    <div class="row">
      <div class="panel panel-success">
        <div class="panel-heading">
          <%= t ".title", name: @lesson.name %>
        </div>
        <div class="panel-body">
          <h2>
          <%= t ".scores", correct_answers: @result.choices.scores,
            number_of_words: @lesson.number_of_words %>
          </h2>
        </div>
      </div>
    </div>
    <div class="row">
      <%= render "form" %>
    </div>
  </div>
</div>
