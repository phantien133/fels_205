<% provide :title, t(:users_all) %>
<h1><%= t :all %></h1>
<%= form_tag users_path, method: :get, id: "search_users" do %>
  <div class="row panel">
    <div class="input-group pull-right">
      <%= text_field_tag :key, params[:key], id:"search_user_box",
        class: "form-control", placeholder: t(".placeholder") %>
      <div class="input-group-btn">
        <%= submit_tag t(:search), class: "btn btn-info" %>
      </div>
    </div>
  </div>
<% end %>
<hr>
<div class="alert alert-danger" id="connect_failed" hidden="true">
  <label >
    <%= t :failed_connection %>
  </label>
</div>
<div id="result_search" class="row" >
  <div class= "row" >
    <% if @users.any? %>
      <%= render @users %>
    <% end %>
  </div>
</div>
<div class="row text-center" id="will_paginate">
  <%= will_paginate %>
</div>
