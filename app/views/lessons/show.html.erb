<div class="row">
  <div class="col-md-2 col-xs-12">
    <h3><%= t ".lesson" %></h3>
  </div>
  <div class="col-md-8 col-xs-12">
    <div class="panel panel-info">
      <div class="panel-heading">
        <%= t ".header",id: @lesson.id, name: @lesson.name %>
      </div>
      <div class="panel-body">
        <p>
          <label>
            <%= t ".id",id: @lesson.id %>
          </label>
          </p>
        <p>
          <label>
            <%= t ".name", name: @lesson.name %>
          </label>
        </p>
        <p>
          <label>
            <%= t ".number_of_words", number: @lesson.number_of_words %>
          </label>
        </p>
        <p>
          <label>
            <%= t ".time", time: @lesson.time %>
          </label>
        </p>
        <div class="pull-right">
          <% if logged_in? %>
            <%= button_to lesson_start_lesson_path(@lesson),
              class: "btn btn-default" do %>
              <i class='glyphicon glyphicon-education'></i>
              <%= t ".start_lesson" %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

</div>
