<% provide :title, t(".title") %>
<h1><%= t ".all" %></h1>

<div class="row">
  <%= form_tag words_path, method: :get, id: "words_search_form" do %>
    <div class="row panel form-inline pull-right">
      <div class="form-group">
        <%= label_tag :Category %>
        <%= select_tag "category_id",
          options_from_collection_for_select(Category.all, "id", "name",
            params[:category_id]),
          include_blank: t("all"),
          class: "form-control form-small",
          onchange: "search_words_by_category_id(this);", id: "select_category_id" %>
      </div>
      <div class="input-group">
        <%= text_field_tag :key, params[:key],
          class: "form-control",placeholder: "Enter here", id:"search_words" %>
        <div class="input-group-btn">
          <%= submit_tag t(:search), class: "btn btn-info" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
<div class="row">
  <table class="table table-hover table-striped">

    <thead>
      <tr>
        <th><%= t :id %></th>
        <th><%= t :content %></th>
        <th><%= t :category %></th>
        <th><%= t :created_at %></th>
      </tr>
    </thead>

    <div class="alert alert-danger hide" id="connect_failed">
      <label >
        <%= t :failed_connection %>
      </label>
    </div>

    <tbody id="result_search">
      <% if @words.any? %>
          <%= render @words %>
      <% end %>
    </tbody>

  </table>

  <div class="row text-center" id="will_paginate">
    <%= will_paginate @words %>
  </div>

</div>
